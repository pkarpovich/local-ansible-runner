{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "lib/**/*",
    "db/**/*"
  ],
  "execMap": {
    "ts": "ts-node --experimental-specifier-resolution=node"
  },
  "ext": "ts,js,json",
  "ts-node": {
    "transpileOnly": true,
    "esm": true,
    "esModuleInterop": true
  }
}
